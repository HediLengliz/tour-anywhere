<!doctype html>
<html>
<head>
    <title>Tour Anywhere - Home</title>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/styles.css">
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-right">
        <a href="/logout" class="btn btn-default btn-sm"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
    <div class="page-header text-center">
        <h1 class="display-4">My Tours</h1>
    </div>
    
    <div id="buttons" style="padding-bottom:20px">
        <a href="/create" class="btn btn-success btn-sm"><i class="fas fa-plus"></i> New Tour</a>
    </div>

    <div class="row">
        <div class="list-group">
            <% tours.forEach(function showitem(tour) {%>
               <a href="edit/<%= tour._id %>" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1"><%= tour.name %></h5>
                        <% if(tour.privacy === 0) {%>
                            <small><i class="fas fa-user-lock"></i> Private</small>
                        <% } %>
                        <% if(tour.privacy === 1) {%>
                            <small><i class="fas fa-eye-slash"></i> Hidden</small>
                        <% } %>
                        <% if(tour.privacy === 2) {%>
                            <small><i class="fas fa-eye"></i></i> Public</small>
                        <% } %>
                    </div>
                    <small><%= tour.exhibits.length %> Exhibits.</small>
                    <p class="mb-1"><%= tour.description %></p>
                    <small>Last edited <%= tour.lastEdit %></small>
                </a>
            <% }); %>
            <!-- sample template of tour list item
            <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Tour Name</h5>
                    <small>Number of visits</small>
                </div>
                <p class="mb-1">Tour description</p>
                <small>L:ast edited.</small>
            </a>
            -->
        </div>
    </div>

</div>
</body>
</html>
