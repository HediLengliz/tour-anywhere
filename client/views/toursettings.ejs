<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-right">
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    <div class="page-header text-center">
        <h1 class="display-4">Create Tour</h1>
    </div>

    <form action='/edittour' method='post'>
        <div class="form-group">
            <label for="tourName">Tour Name</label>
            <input type="text" class="form-control" id="tourName" aria-describedby="nameHelp" placeholder=<%= tour.name %> name="name">
            <small id="nameHelp" class="form-text text-muted">This is the name of your tour that users will see.</small>
        </div>
        <div class="form-group">
            <label for="inputAddress">Tour Address</label>
            <input type="text" class="form-control" id="inputAddress" placeholder="<%= tour.addr1 %> name="address1">
        </div>
        <div class="form-group">
            <label for="inputAddress2">Tour Address 2</label>
            <input type="text" class="form-control" id="inputAddress2" placeholder=<%= tour.addr2 %> name="address2">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">Tour City</label>
                <input type="text" class="form-control" id="inputCity" placeholder=<%= tour.city %> name="city">
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">Tour State</label>
                <select id="inputState" class="form-control" name="state">
                    <option selected value="N/A">N/A</option>
                    <option <%= tour.state === "AK" ? selected : "" %> value="AK">Alaska</option>
        			<option <%= tour.state === "AL" ? selected : "" %> value="AL">Alabama</option>
        			<option <%= tour.state === "AR" ? selected : "" %> value="AR">Arkansas</option>
        			<option <%= tour.state === "AZ" ? selected : "" %> value="AZ">Arizona</option>
        			<option <%= tour.state === "CA" ? selected : "" %> value="CA">California</option>
        			<option <%= tour.state === "CO" ? selected : "" %> value="CO">Colorado</option>
        			<option <%= tour.state === "CT" ? selected : "" %> value="CT">Connecticut</option>
        			<option <%= tour.state === "DC" ? selected : "" %> value="DC">District of Columbia</option>
        			<option <%= tour.state === "DE" ? selected : "" %> value="DE">Delaware</option>
        			<option <%= tour.state === "FL" ? selected : "" %> value="FL">Florida</option>
        			<option <%= tour.state === "GA" ? selected : "" %> value="GA">Georgia</option>
        			<option <%= tour.state === "HI" ? selected : "" %> value="HI">Hawaii</option>
        			<option <%= tour.state === "IA" ? selected : "" %> value="IA">Iowa</option>
        			<option <%= tour.state === "ID" ? selected : "" %> value="ID">Idaho</option>
        			<option <%= tour.state === "IL" ? selected : "" %> value="IL">Illinois</option>
        			<option <%= tour.state === "IN" ? selected : "" %> value="IN">Indiana</option>
        			<option <%= tour.state === "KS" ? selected : "" %> value="KS">Kansas</option>
        			<option <%= tour.state === "KY" ? selected : "" %> value="KY">Kentucky</option>
        			<option <%= tour.state === "LA" ? selected : "" %> value="LA">Louisiana</option>
        			<option <%= tour.state === "MA" ? selected : "" %> value="MA">Massachusetts</option>
        			<option <%= tour.state === "MD" ? selected : "" %> value="MD">Maryland</option>
        			<option <%= tour.state === "ME" ? selected : "" %> value="ME">Maine</option>
        			<option <%= tour.state === "MI" ? selected : "" %> value="MI">Michigan</option>
        			<option <%= tour.state === "MN" ? selected : "" %> value="MN">Minnesota</option>
        			<option <%= tour.state === "MO" ? selected : "" %> value="MO">Missouri</option>
        			<option <%= tour.state === "MS" ? selected : "" %> value="MS">Mississippi</option>
        			<option <%= tour.state === "MT" ? selected : "" %> value="MT">Montana</option>
        			<option <%= tour.state === "NC" ? selected : "" %> value="NC">North Carolina</option>
        			<option <%= tour.state === "ND" ? selected : "" %> value="ND">North Dakota</option>
        			<option <%= tour.state === "NE" ? selected : "" %> value="NE">Nebraska</option>
        			<option <%= tour.state === "NH" ? selected : "" %> value="NH">New Hampshire</option>
        			<option <%= tour.state === "NJ" ? selected : "" %> value="NJ">New Jersey</option>
        			<option <%= tour.state === "NM" ? selected : "" %> value="NM">New Mexico</option>
        			<option <%= tour.state === "NV" ? selected : "" %> value="NV">Nevada</option>
        			<option <%= tour.state === "NY" ? selected : "" %> value="NY">New York</option>
        			<option <%= tour.state === "OH" ? selected : "" %> value="OH">Ohio</option>
        			<option <%= tour.state === "OK" ? selected : "" %> value="OK">Oklahoma</option>
        			<option <%= tour.state === "OR" ? selected : "" %> value="OR">Oregon</option>
        			<option <%= tour.state === "PA" ? selected : "" %> value="PA">Pennsylvania</option>
        			<option <%= tour.state === "PR" ? selected : "" %> value="PR">Puerto Rico</option>
        			<option <%= tour.state === "RI" ? selected : "" %> value="RI">Rhode Island</option>
        			<option <%= tour.state === "SC" ? selected : "" %> value="SC">South Carolina</option>
        			<option <%= tour.state === "SD" ? selected : "" %> value="SD">South Dakota</option>
        			<option <%= tour.state === "TN" ? selected : "" %> value="TN">Tennessee</option>
        			<option <%= tour.state === "TX" ? selected : "" %> value="TX">Texas</option>
        			<option <%= tour.state === "UT" ? selected : "" %> value="UT">Utah</option>
        			<option <%= tour.state === "VA" ? selected : "" %> value="VA">Virginia</option>
        			<option <%= tour.state === "VT" ? selected : "" %> value="VT">Vermont</option>
        			<option <%= tour.state === "WA" ? selected : "" %> value="WA">Washington</option>
        			<option <%= tour.state === "WI" ? selected : "" %> value="WI">Wisconsin</option>
        			<option <%= tour.state === "WV" ? selected : "" %> value="WV">West Virginia</option>
        			<option <%= tour.state === "WY" ? selected : "" %> value="WY">Wyoming</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label for="inputZip">Tour Zip</label>
                <input type="text" class="form-control" id="inputZip" placeholder=<%= tour.zip %> name="zip">
            </div>
            <div class="form-group">
                <label for="tourDesc">Tour Description</label>
                <input type="text" class="form-control" id="tourDesc" aria-describedby="descHelp" placeholder=<%= tour.description %> name="desc">
                <small id="descHelp" class="form-text text-muted">A Brief Description of your Tour.</small>
            </div>
            <div class=-"form-group">
                <label for="inputState">Tour Privacy</label>
                <select id="privacy" class="form-control" name="privacy">
                  <option <%= tour.privacy == 2 ? selected : "" %>>Public</option>
                  <option <%= tour.privacy == 1 ? selected : "" %>>Hidden</option>
                  <option <%= tour.privacy == 0 ? selected : "" %>>Private</option>
                </select>
                <small id="privacyHelp" class="form-text text-muted">Change the visibility of your tour to others or disable access to all other users.</small>
            </div>
        </div>
        <div style="text-align: center">
            <span>
                <a href="/home" class="btn btn-danger">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </span>
        </div>
    </form>
    
</div>
</body>
</html>
