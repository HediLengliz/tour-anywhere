    <meta name="msapplication-TileImage" content="/res/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <style>
        body        { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
    <div class="page-header text-right">
        <a href="/logout" class="btn btn-default btn-sm"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
    <div class="text-left">
        <a href="/home" class="btn btn-primary"><i class="fas fa-home"></i> Home</a>
    </div>

    <form action='/edit/exhibit' method='post'>
        <div class="page-header">
            <label for="exhibitName">Title</label>
            <input type="text" class="form-control" id="exhibitName" aria-describedby="nameHelp" placeholder="Enter a description, caption, or transcription" name="n" value="<%= n %>">
            <small id="nameHelp" class="form-text text-muted">The name of your exhibit.</small>
        </div>
        <% if(text){ %>
            <div class="form-group">
                <label for="exhibitText">Text</label>
                <input type="text" class="form-control" id="exhibitText" aria-describedby="textHelp" placeholder="Enter a description, caption, or transcription" name="text" value="<%= t %>">
                <small id="textHelp" class="form-text text-muted">This text will appear as a description, image caption, or transcription.</small>
            </div>
        <% } %>
        <% if(image){ %>
            <div class="form-group">
                <label for="imageUpload">Image</label>
                <br>
                <input type="hidden" role="uploadcare-uploader" name="image" data-public-key="1346ee3e86abba71f8ed" data-preview-step="true" data-system-dialog="false" data-effects="crop,rotate,mirror" />
            </div>
        <% } %>
        <% if(audio){ %>
            <div class="form-group">
                <label for="audioUpload">Audio</label>
                <br>
                <input type="hidden" role="uploadcare-uploader" name="content" data-public-key="1346ee3e86abba71f8ed" data-preview-step="true" data-system-dialog="true" data-effects="crop,rotate,mirror" />
            </div>
        <% } %>
        <div class="form-group row">
            <label for="form-check" class="col col-md-4">Allow users to find and view this exhibit?</label>
            <div class="form-check" class="col col-md-auto">
                <div class="pretty p-icon p-toggle p-plain">
                    <input type="checkbox" value="yes" name="viewable">
                    <% if(!visibility){ %>
                        <div class="state p-success-o p-on">
                            <i class="far fa-eye"></i>
                            <label>Showing</label>
                        </div>
                        <div class="state p-off">
                    <% } else { %>
                        <div class="state p-success-o p-off">
                            <i class="far fa-eye"></i>
                            <label>Showing</label>
                        </div>
                        <div class="state p-on">
                    <% } %>
                            <i class="far fa-eye-slash"></i>
                            <label>Hidden</label>
                        </div>
                    </input>
                </div>
            </div>
        </div>
        <input type="text" value="<%= tourid %>" name="tourid" hidden></input>
        <input type="text" value="<%= id %>" name="id" hidden></input>
        <div style="text-align: center">
            <span>
                <a href="javascript:history.back()" class="btn btn-danger">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </span>
        </div>
    </form>
</div>
<script>
  UPLOADCARE_LOCALE = "en";
  UPLOADCARE_TABS = "file url facebook gdrive gphotos dropbox instagram evernote flickr skydrive";
  UPLOADCARE_PUBLIC_KEY = "1346ee3e86abba71f8ed";
</script>
<script src="https://ucarecdn.com/libs/widget/3.6.1/uploadcare.full.min.js"></script><script src="https://ucarecdn.com/libs/widget-tab-effects/1.x/uploadcare.tab-effects.js"></script>
<script>
  uploadcare.registerTab('preview', uploadcareTabEffects)
</script>
</body>
</html>